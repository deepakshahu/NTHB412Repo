<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.nit.entity.Doctor" table="DOCTORS">
		<id name="docId" column="DOCID">
			<generator class="increment" />
		</id>
		<property name="docName" column="DOCNAME" length="15" />
		<property name="hospital" column="HOSPITAL" length="15" />
		<set name="patients" table="DOCTORS_PATIENTS" cascade="all" lazy="extra" inverse="true">
			<key column="DOCTOR_ID" />  <!-- Owning side FK column -->
			<many-to-many class="com.nit.entity.Patient" column="PATIENT_ID"/>  <!-- Non-Owning side FK column -->
		</set>
	</class>
</hibernate-mapping>