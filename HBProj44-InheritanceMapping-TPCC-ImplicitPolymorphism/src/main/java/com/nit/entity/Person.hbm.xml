<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>	
	<class name="com.nit.entity.Person" table="HB_INH_PERSON_TPCC1" polymorphism="implicit">
		<id name="pid" column="PID">
			<generator class="increment" />
		</id>
		<property name="pname" column="PNAME" length="15"/>
		<property name="company" column="COMPANY" length="15"/>
	</class>
	<class name="com.nit.entity.Employee" table="HB_INH_EMPLOYEE_TPCC1">
		<id name="pid" column="PID">
			<generator class="increment" />
		</id>
		<property name="pname" column="PNAME" length="15"/>
		<property name="company" column="COMPANY" length="15"/>
		<property name="desg" column="DESG" length="10" />
		<property name="salary" column="SALARY" />
		<property name="deptno" column="DEPTNO" />
	</class>

	<class name="com.nit.entity.Customer" table="HB_INH_CUSTOMER_TPCC1">
		<id name="pid" column="PID">
			<generator class="increment" />
		</id>
		<property name="pname" column="PNAME" length="15"/>
		<property name="company" column="COMPANY" length="15"/>
		<property name="billNo" column="BILLNO" />
		<property name="billAmt" column="BILLAMT"/>
	</class>
</hibernate-mapping>